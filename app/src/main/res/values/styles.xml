<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CustomTextViewLight" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextGray</item>
        <item name="android:fontFamily">@font/sofia_pro_light</item>
    </style>

    <style name="CustomTextViewRegular" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextGray</item>
        <item name="android:fontFamily">@font/sofia_pro_regular</item>
    </style>

    <style name="CustomTextViewMedium" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextGray</item>
        <item name="android:fontFamily">@font/sofia_pro_medium</item>
    </style>

    <style name="CustomTextViewBold" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextGray</item>
        <item name="android:fontFamily">@font/sofia_pro_bold</item>
    </style>

    <style name="CustomEditText" parent="android:Widget.EditText">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:padding">@dimen/_6sdp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/colorTextGray</item>
        <item name="android:fontFamily">@font/sofia_pro_regular</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_42sdp</item>
        <item name="android:textColor">@color/color_btn_text</item>
        <item name="android:fontFamily">@font/sofia_pro_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_button_light_red</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>